<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/nearest_match_sv"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <LinearLayout
        android:id="@+id/nearest_match_ll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ru.romananchugov.bizhack.views.TeamView
            android:id="@+id/first_team_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/vs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/vs"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/nearest_match_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vs_tv"
                tools:text="04:20 PM Start"
                android:text="@string/time_placeholder"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <ru.romananchugov.bizhack.views.TeamView
            android:id="@+id/second_team_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_NBA"
        android:layout_below="@id/nearest_match_sv"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/matchup_recycler_view"
        android:layout_below="@id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </android.support.v7.widget.RecyclerView>



</RelativeLayout>